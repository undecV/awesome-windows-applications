        </div>

        <div class="cell is-fluid is-scrollable">
            <!-- Header Bar -->
            <div class="cell">
                <div class="ts-app-topbar">
                    <div class="start"></div>
                    <div class="center"></div>
                    <div class="end">
                        <div class="ts-content is-secondary is-center-aligned">
                                <div class="ts-meta is-large">
